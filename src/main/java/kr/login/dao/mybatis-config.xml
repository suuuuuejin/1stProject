<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
  <properties resource="kr/login/dao/db.properties"/>
  <environments default="development">
    <environment id="development">
      <transactionManager type="JDBC"/>
      <dataSource type="POOLED">
        <property name="driver" value="${driver}"/>
        <property name="url" value="${url}"/>
        <property name="username" value="${username}"/>
        <property name="password" value="${password}"/>
      </dataSource>
    </environment>
  </environments>
  <mappers>
    <mapper resource="kr/login/dao/MemberMapper.xml"/>
	<mapper resource="kr/login/dao/MapMapper.xml"/>
	<mapper resource="kr/login/dao/AdminMapper.xml"/>
	<mapper resource="kr/login/dao/GradeMapper.xml"/>
	<mapper resource="kr/imgboard/dao/ImgBoardMapper.xml"/>
  </mappers>
</configuration>